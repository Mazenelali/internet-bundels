{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-redeclare": "error",
    "no-undef": "error",
    "no-const-assign": "error",
    "no-constant-condition": "error",
    "no-empty": "error",
    "no-extra-semi": "error",
    "no-unreachable": "error",
    "no-unsafe-finally": "error",
    "no-extra-boolean-cast": "error",
    "no-extra-parens": "error",
    "no-extra-bind": "error",
    "no-extra-label": "error",
    "arrow-body-style": "off",
    "prefer-arrow-callback": "warn"

    // add more rules here
  }
}
